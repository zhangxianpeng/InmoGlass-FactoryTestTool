<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_button_container"
        android:orientation="vertical">

        <TextView
            style="@style/itemTextTitleStyle"
            android:gravity="center"
            android:text="@string/sensor_test_acceleration_of_gravity" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/itemTextTitleStyle"
                android:text="X:" />

            <TextView
                android:id="@+id/tv_sensor_x"
                style="@style/itemTextTitleStyle"
                android:layout_width="200dp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/itemTextTitleStyle"
                android:text="Y:" />

            <TextView
                android:id="@+id/tv_sensor_y"
                style="@style/itemTextTitleStyle"
                android:layout_width="200dp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/itemTextTitleStyle"
                android:text="Z:" />

            <TextView
                android:id="@+id/tv_sensor_z"
                style="@style/itemTextTitleStyle"
                android:layout_width="200dp"
                android:layout_marginStart="10dp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="100dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_sensor_arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null" />

            <TextView
                android:id="@+id/txt_sensor_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@null" />

            <TextView
                android:id="@+id/txt_sensor_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null" />

            <TextView
                android:id="@+id/txt_sensor_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/bottom_button_container"
        layout="@layout/layout_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>